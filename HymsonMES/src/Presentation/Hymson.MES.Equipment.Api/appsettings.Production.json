{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtOptions": {
    "Audience": "https://www.hymson.com",
    "Issuer": "https://www.hymson.com",
    "ExpiresMinutes": 7358400,
    "SymmetricSecurityKeyString": "31553210-a8ee-11ed-a193-0242ac110007",
    "RequireExpirationTime": false,
    "ValidateLifetime": false
  },
  "ConnectionOptions": {
    "MESParamterConnectionString": "Data Source=172.16.12.102;port=3371;User ID=MES;Password=Hms@MES;Database=mes_master_parameter_dev;CharSet=utf8;sslmode=none;MaximumPoolSize=1000;",
    "MESConnectionString": "Data Source=172.16.12.102;port=3371;User ID=MES;Password=Hms@MES;Database=mes_master_dev;CharSet=utf8;sslmode=none;",
    "UserCenterConnectionString": "Data Source=172.16.12.102;port=3371;User ID=MES;Password=Hms@MES;Database=user_master_dev;CharSet=utf8;sslmode=none;"
  },
  "ElasticsearchOptions": {
    "EndPoint": "http://172.16.12.103:9200",
    "Indices": "hymson-test-trace"
  },
  "ParameterOptions": {
    "ParameterDelivery": 2048,
    "EquipmentParameterDelivery": 2048
  },
  "SqlLocalizationOptions": {
    "ReturnOnlyKeyIfNotFound": true,
    "CreateNewRecordWhenLocalisedStringDoesNotExist": true,
    "ServiceType": "MES"
  },
  "KafkaForDebeziumOptions": {
    "Options": {
      "MESDbInstance": {
        "BootstrapServers": "172.16.12.102:9092",
        "GroupId": "csharp-consumer"
      }
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}",
        "fileName": "/logs/service/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "BusinessLog": {
        "type": "File",
        "layout": "${message}",
        "fileName": "/logs/BusinessLog/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "TraceLog": {
        "type": "File",
        "layout": "${message}",
        "fileName": "/logs/TraceLog/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "AlarmLog": {
        "type": "File",
        "layout": "${message}",
        "fileName": "/logs/AlarmLog/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}"
      }
    },
    "rules": [
      {
        "logger": "Hymson.Logging.Services.BusinessLogService",
        "minLevel": "Debug",
        "writeTo": "BusinessLog",
        "final": true
      },
      {
        "logger": "Hymson.Logging.Services.TraceLogService",
        "minLevel": "Debug",
        "writeTo": "TraceLog",
        "final": true
      },
      {
        "logger": "Hymson.Logging.Services.AlarmLogService",
        "minLevel": "Debug",
        "writeTo": "AlarmLog",
        "final": true
      },

      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }
}