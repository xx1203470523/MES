{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtOptions": {
    "Audience": "https://www.hymson.com",
    "Issuer": "https://www.hymson.com",
    "ExpiresMinutes": 3000,
    "SymmetricSecurityKeyString": "31553210-a8ee-11ed-a193-0242ac110007"
  },
  "ConnectionOptions": {
    "MESConnectionString": "Data Source=10.10.79.16;port=3371;User ID=MES;Password= ;Database=mes_master;CharSet=utf8;sslmode=none;",
    "UserCenterConnectionString": "Data Source=10.10.79.16;port=3371;User ID=jinyi;Password=Hmx@jinyi;Database=user_master;CharSet=utf8;sslmode=none;",
    "SequenceConnectionString": "Data Source=10.10.79.16;port=3371;User ID=jinyi;Password=Hmx@jinyi;Database=user_master;CharSet=utf8;sslmode=none;"
  },
  "PrintOptions": {
    "BaseAddressUri": "http://10.2.20.243:8326/"
  },
  "SqlLocalizationOptions": {
    "ReturnOnlyKeyIfNotFound": true,
    "CreateNewRecordWhenLocalisedStringDoesNotExist": true,
    "ServiceType": "MES"
  },
  "KafkaForDebeziumOptions": {
    "Options": {
      "MESDbInstance": {
        "BootstrapServers": "10.10.79.13:9092"
      },
      "UserCenterDbInstance": {
        "BootstrapServers": "10.10.79.13:9092"
      },
      "WMSDbInstance": {
        "BootstrapServers": "10.10.79.13:9092"
      }
    },
    "MaxInstances": 15
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}",
        "fileName": "/logs/service/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "BusinessLog": {
        "type": "File",
        "layout": "${message}",
        "fileName": "/logs/BusinessLog/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "TraceLog": {
        "type": "File",
        "layout": "${message}",
        "fileName": "/logs/TraceLog/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}"
      }
    },
    "rules": [
      {
        "logger": "Hymson.Logging.Services.BusinessLogService",
        "minLevel": "Debug",
        "writeTo": "BusinessLog",
        "final": true
      },
      {
        "logger": "Hymson.Logging.Services.TraceLogService",
        "minLevel": "Debug",
        "writeTo": "TraceLog",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }

}
