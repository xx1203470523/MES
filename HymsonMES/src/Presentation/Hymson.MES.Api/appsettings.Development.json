{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionOptions": {
    "MESConnectionString": "Data Source=10.10.79.16;port=11702;User ID=root;Password=hmx20304;Database=mes_master;CharSet=utf8;sslmode=none;"
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}",
        "fileName": "/logs/service/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }

}
