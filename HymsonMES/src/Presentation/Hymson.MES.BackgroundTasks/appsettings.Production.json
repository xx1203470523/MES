{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionOptions": {
    "MESConnectionString": "Data Source=127.0.0.1;port=3371;User ID=root;Password=Hms@qingan13524;Database=mes_master_qingan;CharSet=utf8;sslmode=none;",
    "HymsonQUARTZDB": "Data Source=127.0.0.1;port=3371;User ID=root;Password=Hms@qingan13524;Database=imtc_quartz;CharSet=utf8;sslmode=none;",
    "SequenceConnectionString": "Data Source=127.0.0.1;port=3371;User ID=MES_qingan;Password=Hms@qingan;Database=user_master;CharSet=utf8;sslmode=none;"
  },
  "Quartz": {
    "EquHeartbeatJob": "0/30 * * * * ?",
    "EquHeartBeatRecordJob": "0 0 0 1/1 * ?"
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}",
        "fileName": "/logs/service/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "BusinessLog": {
        "type": "File",
        "layout": "${message}",
        "fileName": "/logs/BusinessLog/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "TraceLog": {
        "type": "File",
        "layout": "${message}",
        "fileName": "/logs/TraceLog/prod/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}"
      }
    },
    "rules": [
      {
        "logger": "Hymson.Logging.Services.BusinessLogService",
        "minLevel": "Debug",
        "writeTo": "BusinessLog",
        "final": true
      },
      {
        "logger": "Hymson.Logging.Services.TraceLogService",
        "minLevel": "Debug",
        "writeTo": "TraceLog",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }

}