    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}",
        "fileName": "/logs/service/${appdomain:format={1\\}-{0\\}}-${date:format=yyyyMMddHH}.log",
        "keepFileOpen": false,
        "maxArchiveFiles": 2,
        "concurrentWrites": true
