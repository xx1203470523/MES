      "logconsole": {
        "type": "Console",
        "layout": "${longdate} ${threadid} ${level} ${logger} ${message}${exception:format=ToString}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }

